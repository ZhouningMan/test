<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/knowledge_center_main_wrapper"
    tools:context="com.insitehub.saleready_android.KnowledgeCenterActivity" >

    <GridView
        android:id="@+id/gridview_assigned_asset"
        android:layout_width="300dp"
        android:layout_height="182dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:numColumns="1"
        android:text="@string/hello_world" />

    <ImageView
        android:id="@+id/approved_materials_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="125dp"
        android:layout_marginTop="13dp"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:onClick="navigate"
        android:src="@drawable/btn_selling_skills" />

    <TextView
        android:id="@+id/approved_materials_text"
        style="@style/MainActivityTextStyle7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="125dp"
        android:layout_marginTop="85dp"
        android:text="@string/approved_materials_text_2" />

    <ImageView
        android:id="@+id/coaching_forms_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/approved_materials_button"
        android:layout_marginRight="18dp"
        android:layout_marginTop="0dp"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:onClick="navigate"
        android:src="@drawable/btn_product_information" />

    <TextView
        android:id="@+id/coaching_forms_text"
        style="@style/MainActivityTextStyle7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/approved_materials_text"
        android:layout_marginRight="18dp"
        android:text="@string/coaching_forms_text_2" />

    <ImageView
        android:id="@+id/library_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="70dp"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:onClick="navigate"
        android:src="@drawable/btn_market_knowledge" />

    <TextView
        android:id="@+id/library_text"
        style="@style/MainActivityTextStyle7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="150dp"
        android:text="@string/library" />

    <ImageView
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:src="@color/orange" />

</RelativeLayout>