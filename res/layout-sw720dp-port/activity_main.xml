<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout"
        android:layout_weight="1"
        android:onClick="resetBackPresses" >

        <ImageView
            android:id="@+id/performance_button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignLeft="@id/certification_center_button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="250dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:onClick="navigate"
            android:src="@drawable/btnperformance" />

        <ImageView
            android:id="@+id/coaching_corner_button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignRight="@id/knowledge_center_button"
            android:layout_alignTop="@id/pitch_practice_button"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:onClick="navigate"
            android:src="@drawable/btncoachescorner" />

        <TextView
            android:id="@+id/coaching_corner_text"
            style="@style/MainActivityTextStyle10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pitch_practice_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="160dp"
            android:text="@string/coaching_corner_text" />

        <ImageView
            android:id="@+id/certification_center_button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="185dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:onClick="navigate"
            android:src="@drawable/btncertificationcenter" />

        <ImageView
            android:id="@+id/group_chat_button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignBottom="@id/performance_button"
            android:layout_alignRight="@id/knowledge_center_button"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:onClick="navigate"
            android:src="@drawable/btngroupchat" />

        <ImageView
            android:id="@+id/pitch_practice_button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignLeft="@id/certification_center_button"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:onClick="navigate"
            android:src="@drawable/btnpitchpractice" />

        <ImageView
            android:id="@+id/knowledge_center_button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="185dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:onClick="navigate"
            android:src="@drawable/btnknowledgecenter" />

        <TextView
            android:id="@+id/performance_text"
            style="@style/MainActivityTextStyle10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="220dp"
            android:layout_marginLeft="135dp"
            android:text="@string/performance_text" />

        <TextView
            android:id="@+id/group_chat_text"
            style="@style/MainActivityTextStyle10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/performance_text"
            android:layout_alignLeft="@id/group_chat_button"
            android:layout_alignRight="@id/group_chat_button"
            android:text="@string/group_chat_text" />

        <TextView
            android:id="@+id/knowledge_center_text"
            style="@style/MainActivityTextStyle10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/certification_center_text"
            android:layout_alignParentRight="true"
            android:layout_margin="155dp"
            android:text="@string/knowledge_center_text" />

        <TextView
            android:id="@+id/pitch_practice_text"
            style="@style/MainActivityTextStyle10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="380dp"
            android:text="@string/pitch_practice_text" />

        <TextView
            android:id="@+id/certification_center_text"
            style="@style/MainActivityTextStyle10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="475dp"
            android:layout_marginLeft="155dp"
            android:text="@string/certification_center_text" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="0"
        android:src="@color/orange" />

</LinearLayout>