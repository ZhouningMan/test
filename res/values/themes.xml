<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/action_bar_menu_item_selector</item>
        <item name="android:actionBarWidgetTheme">@style/AppTheme.Widget</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Activity</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>

 

    <style name="AppTheme.Login">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="MyAnimation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_holder</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_holder</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/ActionBarOverflowStyle</item>
    </style>

</resources>